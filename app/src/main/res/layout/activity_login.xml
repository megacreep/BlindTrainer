<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.megacreep.sensertest.activities.LoginActivity">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:id="@+id/captain"
        android:src="@drawable/captain"
        android:layout_marginTop="85dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to tune courses"
        android:textSize="17sp"
        android:textColor="#c3c3c3"
        android:id="@+id/textView"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/captain"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let us &quot;walk&quot; it out !"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:textColor="#c3c3c3"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/captain" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/divider"
        >

        <View
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:background="#FFD600"
            android:id="@+id/view">
        </View>


        <View
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:background="#5B5B5D"
            android:layout_toEndOf="@id/view"
            android:layout_marginStart="50dp"
            android:id="@+id/view2">
        </View>

        <View
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:background="#767676"
            android:layout_toEndOf="@id/view2"
            android:layout_marginStart="50dp"
            android:id="@+id/view3">
        </View>

        <View
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:background="#DCDCDC"
            android:layout_toEndOf="@id/view3"
            android:layout_marginStart="50dp">
        </View>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@drawable/bg_yellow"
        android:textColor="@android:color/white"
        android:elevation="30dp"
        android:text="Try TUNE"
        android:id="@+id/btnGuest"
        android:layout_below="@+id/divider"
        android:layout_alignStart="@+id/divider"
        android:layout_marginTop="50dp"
        android:layout_alignEnd="@+id/divider" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@drawable/bg_dark"
        android:textColor="@android:color/white"
        android:elevation="10dp"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/btnGuest"
        android:layout_alignStart="@+id/divider"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/divider"
        />

</RelativeLayout>
